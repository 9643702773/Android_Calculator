<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.example.boss.mycalculatorr.MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:lines="1"
        android:text="0"
        android:textColor="#212121"
        android:textSize="40dp" />

    <TextView
        android:layout_above="@+id/ll1"
        android:id="@+id/finalView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lines="1"
        android:text=""
        android:textColor="#212121"
        android:textSize="50dp" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ac_button"

            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_margin="-10dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="allClear"
            android:text="All clear"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/c_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="delete"
            android:text="Delete"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll3">

        <Button
            android:id="@+id/divide_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="divide"
            android:text="รท"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/multiply_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="multiply"
            android:text="ร"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/subtract_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="subtract"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/addition_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="addition"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll4">

        <Button
            android:id="@+id/seven_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:onClick="seven"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/eight_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:onClick="eight"
            android:text="8"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/nine_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:onClick="nine"
            android:text="9"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/percentage_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="percentage"
            android:text="%"
            android:textColor="#ffffff"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll5">

        <Button
            android:id="@+id/four_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:onClick="four"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/five_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:onClick="five"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/six_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:onClick="six"
            android:text="6"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/doubleZero_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="doubleZero"
            android:text="00"
            android:textColor="#ffffff"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll6">

        <Button
            android:id="@+id/one_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:onClick="one"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/two_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:onClick="two"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/three_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:onClick="three"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/point_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="point"
            android:text="."
            android:textColor="#ffffff"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/zero_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="2"
            android:background="@drawable/button2"
            android:onClick="zero"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="30dp" />


        <Button
            android:id="@+id/equal_button"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="2"
            android:background="@drawable/button3"
            android:onClick="equal"
            android:text="="
            android:textColor="#ffffff"
            android:textSize="30dp" />
    </LinearLayout>
</RelativeLayout>
